#if ($advert != $null)

    <p class="heading">Advert Form</p>

    <div class="advertFormContainer">

        <form class="advertForm" action="/adverts/$advert.getId()" method="post">

            <label for="title">Title</label>
            <input type="text" class="inputbox" name="title" required="true" id="title" value="$advert.getTitle()">

            <label for="description">Description</label>
            <input type="text" class="inputbox" name="description" required="true" id="description" value="$advert.getDescription()">

            <label for="category">Category</label>
            <select name="category" id="category" required="true">
                #foreach ($category in $allCategories)
                <option value="$category"
                        #if ($advert.getCategory() == $category)
                        selected="selected"
                        #end >
                    $category.getNiceName()
                </option>
                #end
            </select>

            <label for="price">Price</label>
            <input type="number" class="inputbox" name="price" required="true" id="price" value="$advert.getPrice()">

            <input type="submit" class="button" value="Update advert">

        </form>

    </div>

#else

<p class="doesNotExist">This advert does not exist!</p>

#end


